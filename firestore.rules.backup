rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Función helper para verificar si el usuario es admin
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Productos - lectura pública, escritura solo administradores
    // Permitir actualización de stock para reservas de pedidos
    match /products/{document} {
      allow read: if true;
      allow create, delete: if isAdmin();
      allow update: if isAdmin() ||
                      (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['stock']));
    }

    // Categorías - lectura pública, escritura solo administradores
    match /categories/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Categorías (español) - lectura pública, escritura solo administradores
    match /categorias/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Pedidos - creación pública, lectura/edición solo administradores
    match /orders/{document} {
      allow create: if true;
      allow read: if isAdmin() ||
                    (request.auth != null && resource.data.userId == request.auth.uid);
      allow update, delete: if isAdmin();
    }

    // Configuración - lectura pública, escritura solo administradores
    match /config/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Configuración del sitio - lectura pública, escritura solo administradores
    match /siteConfig/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Usuarios - cada usuario puede leer/escribir solo su propio documento
    // Solo admin puede leer todos los usuarios y eliminarlos
    match /users/{userId} {
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      allow delete: if isAdmin();
    }

    // Mensajes de chat - solo admin y el usuario dueño pueden acceder
    match /chat_messages/{document} {
      allow read: if isAdmin() ||
                    (request.auth != null && resource.data.userEmail == request.auth.email);
      allow write, create: if isAdmin() || request.auth != null;
    }

    // Reportes diarios - solo administradores
    match /daily_reports/{document} {
      allow read, write: if isAdmin();
    }

    // Transacciones de stock - crear permitido, leer/editar solo admin
    match /stock_transactions/{document} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Alertas de stock - crear/actualizar permitido, leer/editar solo admin
    match /stock_alerts/{document} {
      allow create, update: if true;
      allow read, delete: if isAdmin();
    }

    // Carritos - cada usuario solo puede acceder a su propio carrito
    match /carts/{userId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}