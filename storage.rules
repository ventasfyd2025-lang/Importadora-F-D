rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (request.auth.token.isAdmin == true || request.auth.token.admin == true);
    }

    function isAllowedProofFile() {
      return request.resource != null
        && request.resource.size < 7 * 1024 * 1024
        && (request.resource.contentType.matches('image/.*')
          || request.resource.contentType.matches('application/pdf'));
    }

    // Lectura pública de assets; escritura solo para administradores autenticados
    match /homepage-promotions/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /homepage-middle-banners/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /banners/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /config/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /main-banner/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /comprobantes/{allPaths=**} {
      allow read: if true;
      allow write: if (isAdmin() || isSignedIn()) && isAllowedProofFile();
    }

    match /test/{allPaths=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Regla por defecto para cualquier otra carpeta: lectura pública, escritura restringida
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
